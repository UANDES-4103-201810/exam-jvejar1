
<div class="grid-container">
  <%@total_price=0%>
  <%@pizzas.each do |pizza|%>

    <div><p><%=pizza.name+" "+pizza.crust.name%> </p>
      <%pizza_price=pizza.crust.price+pizza.recipe.price%>
      <%@total_price+=pizza_price%>
      <%=link_to "Add to cart",add_pizza_to_cart_path(pizza.id),method: :post unless index==false%>
      <%=label_tag(:price,"$ "+(pizza_price).to_s)%>
    </div>
  <%end%>


</div>
<%= yield %>

<style>
  .grid-container {
    display: grid;
    grid-template-columns: auto auto auto auto;
    grid-gap: 15px;
    background-color: rgba(9, 28, 48, 0.29);
    padding: 5px;
  }
  .grid-container > div {
    background-color: rgba(255, 255, 255, 0.8);
    border: 1px solid black;
    text-align: center;
    font-size: 20px;
  }
</style>